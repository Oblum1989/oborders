<div id="order_product-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><%= title %></h4>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>

            </div>
            <%= form_for @order_product, remote: true do |f| %>
            <div class="modal-body"> 
                
                <p><%= f.hidden_field :order_id, :value => @dd %></p>            
                <div class="form-group">
                    <%= f.collection_select(:product_id, Product.all, :id, :name, {prompt: "Elige un producto"}, class: 'form-control') %>
                </div>
                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><%= fa_icon "phone" %></span>
                        </div>
                        <%= f.text_field :quantity, class: "form-control input-lg", placeholder: "Cantidad" %>
                    </div>
                </div>

            </div>


            <div class="modal-footer">
                <%= f.submit 'Crear', class: "btn btn-primary btn-block" %>
            </div>
            <% end %>
        </div>
    </div>
</div>